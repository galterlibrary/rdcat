.grid-x
  .small-10.cell
    %h1 Categories
  .small-2.cell.links.text-right
    = link_to 'New Category', new_category_path, class: 'button' if can_create?(Organization)

.grid-x
  .cell
    %table
      %thead
        %tr
          %th Name
          %th
          %th
          %th

      %tbody
        - @categories.each do |category|
          %tr
            %td= category.name
            %td= link_to 'Show', category
            %td= link_to 'Edit', edit_category_path(category)
            %td= link_to 'Destroy', category, :method => :delete, :data => { :confirm => 'Are you sure?' }

.grid-x
  .cell
    = will_paginate @categories

