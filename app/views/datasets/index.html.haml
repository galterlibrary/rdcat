%h1 Datasets

- if @datasets.blank?
  %p
    No datasets currently exist

- else

  %table
    %thead
      %tr
        %th
          Title
        %th
          Organization
        %th
          Maintainer
        %th
        %th
        %th

    %tbody
      - @datasets.each do |dataset|
        %tr
          %td= dataset.title
          %td= dataset.organization.name
          %td= "#{dataset.maintainer.name} #{dataset.maintainer.email}"
          %td= link_to 'Show', dataset
          %td= link_to 'Edit', edit_dataset_path(dataset)
          %td= link_to 'Destroy', dataset, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Dataset', new_dataset_path
